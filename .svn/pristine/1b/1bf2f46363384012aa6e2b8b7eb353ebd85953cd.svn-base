.finance-page{
    padding-bottom: 6em;
    &.finance-personal-page{padding-bottom: 4rem;}
    .banner{
        width: 100%;
        height: 50%;
        img{
            width: 100%;
            height: 100%;
        }
    }
    .dflex-list{
        display: flex;
        flex-wrap: wrap;
        padding: 0.307rem;
        justify-content: space-around;
        li{
            width: 48%;
            margin-bottom: 0.756rem;
            &:nth-child(3),&:nth-child(4){ margin-bottom: 0}
            .left{
                width: 0.96rem;
                height: 100%;
                margin-right: 5px;
                img{
                    width: 100%;
                    height: 0.96rem;
                    // margin-top: 0.24rem;
                }
            }
            .right{
                display: inline-block;
                width: calc(100% - 1.1rem);
                p{
                    word-break: normal;
                    line-height: 0.36rem;
                    &:nth-child(1){
                        margin-bottom: 5px;
                        color: #333;
                        font-size: 14px;
                    }
                    &:nth-child(2){
                        color: #666;
                        font-size: 12px;
                    }
                }
            }
        }
    }
    .footer{
        height: 1.1rem;
        padding: 0.14rem 0.29rem;
        position: fixed;
        z-index: 100;
        bottom: 0;
        left: 0;
        right: 0;
        background: #fff;
        .button1{
            position: absolute;
            left: 50%;
            transform: translateX(-50%);
            display: block;
            width: 7.2rem;
            height: 0.984rem;
            line-height: 0.984rem;
            border-radius:3px;
            color: #fff;
            text-align: center;
            font-size: 0.384rem;
        }
        .button2{
            position: absolute;
            left: 50%;
            transform: translateX(-50%);
            display: block;
            width: 7.2rem;
            height: 0.984rem;
            border-radius:3px;
            color: #fff;
            text-align: center;
            font-size: 0.384rem;
            line-height: 0.984rem;
        }

        .tips{
            margin-top: 0.984rem;
            text-align: center;
            line-height: 25px;
            padding: 0.12rem;
        }
        &.finance-footer{
            height: 3rem;
        }
        &.developer-footer{
            padding-bottom: 0.24rem;
        }
    }
    .section-1{
        margin: 0.41rem;
        &:nth-child(2){
            margin-bottom: 1.62rem;
        }
        .section-title{
            border-left: 2px solid #00B660;
            padding-left: 5px;
            margin-bottom: 10px;
        }
        ul{
            li{
                line-height: 0.82rem;
                span{
                    display: inline-block;
                    width: 2.6rem;
                    white-space:nowrap;
                }
                input{
                    border:none;
                    width: calc(100% - 2.88rem);
                }
            }
        }
        .block{
            background: #F7F7F7;
            padding: 20px 60px;
            display: flex;
            flex-wrap: wrap;
            li{
                width: 50%;
                margin-bottom: 20px;
            }
        }
    } 
    .weui-cells{
        .weui-label{
            word-break: keep-all;
            word-wrap: normal;
            width: 11em!important; 
        }
        .weui-input{
            text-align: right;
        }
        .vux-popup-picker-placeholder{font-size: 13px;}
    }
    .group1-personal{
        .weui-label{
            &::before{
                content: '*';
                position: absolute;
                left: 5px;
                color: red;
            }
        }
        .vux-datetime{
            >div>p{
                width: 11em!important; 
                &::before{
                    content: '*';
                    position: absolute;
                    left: 5px;
                    color: red;
                }
            }
            .vux-datetime-value{
                .vux-cell-placeholder{font-size: 13px;}
            }
            .vux-cell-value{
                color: #333!important;
            }
        }
        .vux-popup-picker-value{
            color: #333!important;
        }
    }
    .weui-cells__title{
        font-size: 18px;
        color: #333;
        font-weight: 500;
        border-left: 2px solid #00B660;
        padding-left: 5px;
        margin-left: 10px;
    }
    .correct-tip{
        margin: 10px;
        color: #999;
        font-size: 0.24rem;
        word-break: normal;
        line-height: 18px;
    }
    .weui-icon-clear:before{
        content: "\e60c"!important;
        font-size: 0.3rem;
    }
    input{
        // &::placeholder{
        //     font-size: 17px;
        // }
    }

}